<div class="container">
  <div class="row text-center ">
    <div class="col-md-12">
      <br /><br />
      <h2 class="head-col">Education Information Systerm : Login</h2>
      <h5>( Login yourself to get access )</h5>
      <br />
    </div>
  </div>
 <div class="row ">
  <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong>   Enter Details To Login </strong>  
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <br />
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="fa fa-tag" ></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Your Username' %>
          </div>
          <div class="form-group input-group">
            <span class="input-group-addon"><i class="fa fa-lock"  ></i></span>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Your Password' %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div class="field">
            </div>
            <div class="form-group">
              <label class="checkbox-inline">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </label>
              <span class="pull-right">
                <a href="#" >Forget password ? </a> 
              </span>
            </div>
          <% end -%>
          <%= f.submit "Login Now", class: "btn btn-primary" %>
          <hr />
            <%= link_to "Sign up", new_registration_path(resource_name) %><br />
            <!-- Not register ? <a href="registeration.html" >click here </a>  -->
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
<%#= render "devise/shared/links" %>
            
